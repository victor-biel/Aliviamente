<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".DadosPessoaisFragment">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/k2d_thin"
            android:text="@string/hint_nome"
            android:textColor="@color/btn_boas_vindas"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/texto_nome"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:fontFamily="@font/k2d_thin"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/hint"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/k2d_thin"
            android:text="@string/hint_email2"
            android:textColor="@color/btn_boas_vindas"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/texto_email"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:fontFamily="@font/k2d_thin"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/hint"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/k2d_thin"
            android:text="@string/hint_password2"
            android:textColor="@color/btn_boas_vindas"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/texto_password"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:fontFamily="@font/k2d_thin"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/hint"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/k2d_thin"
            android:text="@string/hint_conf_password"
            android:textColor="@color/btn_boas_vindas"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/texto_conf_password"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:ems="10"
            android:fontFamily="@font/k2d_thin"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/hint"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_continuar"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/btn_boas_vindas"
            android:fontFamily="@font/k2d_thin"
            android:gravity="center"
            android:text="@string/btn_continuar"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/hint"
            android:gravity="center"
            android:text="@string/btn_voltar"
            android:textColor="@color/white"
            android:textColorLink="@color/white" />


    </LinearLayout>

</FrameLayout>